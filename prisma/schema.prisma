generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmailContact {
  id         String   @id @default(cuid())
  title      String
  name       String
  body       String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("email_contact") // ← テーブル名をスネークケースで作る
}
